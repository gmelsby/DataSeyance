<table border="5" cellpadding="10">
  <caption>Locations</caption>
  <thead>
  <tr>
    <th>location_id</th>
    <th>name</th>
    <th>street_address</th>
    <th>city</th>
    <th>zip</th>
    <th>state</th>
    <th>country</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
  </thead>
  <tbody>
  {% for location in location_data %}
  <tr>
    <td>{{location['location_id']}}</td>
    <td>{{location['name']}}</td>
    <td>{{location['street_address']}}</td>
    <td>{{location['city']}}</td>
    <td>{{location['zip']}}</td>
    <td>{{location['state']}}</td>
    <td>{{location['country']}}</td>
    <td><a href="_">Delete</a></td>
    <td><a href="locations?id={{location['location_id']}}">Edit</a></td>
  </tr>
  {% endfor %}
  <tbody>
</table>




<div id="insert" style="display: block">
  <form id="InsertLocation" method="POST">
      <legend><strong>Insert Location</strong></legend>
          <fieldset class="fields">
        <label> Name: </label> <input type="text"  name="name">
        <label> Street Address: </label> <input type="text" name="street_address">
        <label> City: </label> <input type="text" name="city">
        <label> Zip: </label> <input type="text" name="zip">
        <label> State: </label> <input type="text" name="state">
        <label> Country: </label> <input type="text" name="country">
    </fieldset>
    <input class="btn" type="submit" id="InsertLocation" value="Insert Location">
  </form>
</div>


<div>
&nbsp;
</div>

<div id="update" style="display: block">
    <form id="UpdateLocation" method="POST">
      <legend><strong>Update Location</strong></legend>
      <label for="toupdate">Location to Update: </label>
      <select name="toupdate" id="update">
        <option value=""> </option>
        {% for location in location_data %}
        <option value={{location['location_id']}}
        {% if location_to_edit['location_id']==location['location_id'] %} selected {% endif %}>
          {{location['name']}} | id: {{location['location_id']}}</option>
        {% endfor %}
      </select>
      <fieldset class="fields">
      <legend>New Information</legend>
        <label> Name: </label> <input type="text" name="new_name" size=40 value="{{location_to_edit['name']}}">
        <label> Street Address: </label> <input type="text" name="new_street_address" value="{{location_to_edit['street_address']}}">
        <label> City: </label> <input type="text" name="new_city" value="{{location_to_edit['city']}}">
        <label> Zip: </label> <input type="text" name="new_zip" value="{{location_to_edit['zip']}}">
        <label> State: </label> <input type="text" name="new_state" value="{{location_to_edit['state']}}">
        <label> Country: </label> <input type="text" name="new_country" value="{{location_to_edit['country']}}">
    </fieldset>
    <input class="btn" type="submit" id="UpdateLocation" value="Update Location">
  </form>
</div>

