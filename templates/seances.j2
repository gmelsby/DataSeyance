<div id="update" style="display: block">
  <form id="updateSeance" method="POST">
      <legend><strong>Update Seance</strong></legend>
      <label for="id_input">Seance to be Updated</label>
      <fieldset class="fields">
       <select name="id_input" id="actuallyattended">
           <option value=""></option>
           {% for seance in seance_data %}
           <option value={{seance['seance_id']}}
           {% if seance_to_edit['seance_id']==seance['seance_id'] %} selected {% endif %}>
           {{seance['date']}} at {{seance['name']}} | id: {{seance['seance_id']}}</option>
           {% endfor %}
       </select>
      </fieldset>
     <legend>New Information</legend>
      <fieldset class="fields">
        <label> Date: </label> 
        <input type="date" name="new_date" value={{seance_to_edit['date']}}>
        <label for="newloc">Location: </label>
      <select name="new_location_id" id="newloc">
        <option value=""></option>
        {% for location in location_data %}
        <option value={{location['location_id']}}
        {% if seance_to_edit['location_id']==location['location_id'] %} selected {% endif %}>
        {{location['name']}} | location_id {{location['location_id']}}</option>
        {% endfor %}
      </select>
    </fieldset>
    <input class="btn" type="submit" id="UpdateSeance" value="Update Seance">
  </form>
</div>

