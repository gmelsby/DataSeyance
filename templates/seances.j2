</table>


<div id="insert" style="display: block">
  <form id="InsertSeance" method="POST">
      <legend><strong>Insert Seance</strong></legend>
     <fieldset class="fields">
       <label> Date: </label> <input type="date"  name="date">
       <label for="location_id">Location: </label>
      <select name="location_id" id="newloc">
        <option value=""></option>
        {% for location in location_data %}
        <option value={{location['location_id']}}
        {% if seance_to_edit['location_id']==location['location_id'] %} selected {% endif %}>
        {{location['name']}} | location_id {{location['location_id']}}</option>
        {% endfor %}
      </select>
    </fieldset>
    <input class="btn" type="submit" id="InsertSeance" value="Insert Seance">
  </form>

</div>
