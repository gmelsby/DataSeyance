{% extends 'baselayout.html' %}
{% block title %}Seances{% endblock %}

{% block content %}
<div class="container-fluid">
<table class="table table-striped">
  <caption>Seances</caption>
  <thead>
  <tr>
    <th>seance_id</th>
    <th>Date</th>
    <th>Location Name</th>
    <th>Update</th>
    <th>Delete</th>
    <th>View and Edit Seance Attendees</th>
    <th>View and Edit Channelings at this Seance</th>
  </tr>
  </thead>
  <tbody>
  {% for seance in seance_data %}
  <tr>
    <td>{{seance['seance_id']}}</td>
    <td>{{seance['date']}}</td>
    <td >{{seance['name']}}</td>


    <form id="UpdateSeance" method="POST">
    <td>
        <input class="btn btn-secondary" type="submit" id="UpdateSeance" value="Update">
        <input type="hidden" name="action" value="tagupdate">
        <input type="hidden" name="id_input" value={{seance['seance_id']}}
        <input type="hidden" name="edit_form" value={{seance['seance_id']}}
    </td>
    </form>

    <form id="DeleteSeance" method="POST">
    <td>
        <input class="btn btn-danger" type="submit" id="DeleteSeance" value="Delete">
        <input type="hidden" name="action" value="delete">
        <input type="hidden" name="seance_id" value={{seance['seance_id']}}
   </td>
  </form>


    <td><a href="seanceattendees?seance_id_input={{seance['seance_id']}}">View and Edit Seance Attendees</a></td>
    <td><a href="channelings?chosen_seance_id={{seance['seance_id']}}">View and Edit Channelings at this Seance
  </tr>
  {% endfor %}

  <tr>

  <div class="form-group">
  <form id="InsertSeance" method="POST">

    <td>Insert New Seance</td>

  <td><input type="date" class="form-control" name="date"></td>

     <td colspan='2'>
      <select name="location_id" id="newloc">
        <option value=""></option>
        {% for location in location_data %}
        <option value={{location['location_id']}}
        {% if seance_to_edit['location_id']==location['location_id'] %} selected {% endif %}>
        {{location['name']}} | location_id {{location['location_id']}}</option>
        {% endfor %}
      </select>
      </td>
<td>   </td>
    <td>
    <input class="btn btn-dark" type="submit" id="InsertSpirit" value="Insert Spirit">
         <input type="hidden" name="action" value="insert">
   </td>

  </form>
  </div>
  <td></td>
</tr>
  </tbody>
</table>



</div>

{% endblock %}